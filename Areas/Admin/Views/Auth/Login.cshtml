@model GraciaDivina.Models.Auth.LoginVM
@{
    ViewData["Title"] = "Acceso administrador";
}

<h1 class="h4 mb-3">Acceso administrador</h1>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form asp-action="Login" method="post" class="card p-3" style="max-width:420px;">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="mb-3">
        <label asp-for="Usuario" class="form-label"></label>
        <input asp-for="Usuario" class="form-control" autofocus />
        <span class="text-danger" asp-validation-for="Usuario"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <button class="btn btn-primary">Entrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
