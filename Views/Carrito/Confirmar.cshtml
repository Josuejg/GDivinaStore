@model GraciaDivina.Models.ViewModels.CheckoutVM
@{
    ViewData["Title"] = "Confirmar pedido";
}
<h1 class="h4 mb-3">Confirmar pedido</h1>

<div class="row g-4">
    <div class="col<form asp-action="Confirmar" method="post">
        <form asp-action="Confirmar" method="post">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" inputmode="text" />
                <span class="text-danger" asp-validation-for="Nombre"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" type="tel" inputmode="tel" pattern="\d{8,15}" />
                <span class="text-danger" asp-validation-for="Telefono"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <textarea asp-for="Direccion" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Direccion"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <button class="btn btn-success">Generar pedido</button>
            <a class="btn btn-secondary" asp-action="Index">Volver al carrito</a>
        </form>
    </div>

    <div class="col-12 col-md-6">
        <div class="card">
            <div class="card-header">Resumen</div>
            <div class="card-body">
                @if (!Model.Carrito.Items.Any())
                {
                    <div class="text-muted">Tu carrito está vacío.</div>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var it in Model.Carrito.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@it.Producto <small class="text-muted">x @it.Cantidad</small></span>
                                <strong>@it.Subtotal.ToString("C")</strong>
                            </li>
                        }
                    </ul>
                    <div class="d-flex justify-content-between mt-3">
                        <span>Total</span>
                        <strong>@Model.Carrito.Total.ToString("C")</strong>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
