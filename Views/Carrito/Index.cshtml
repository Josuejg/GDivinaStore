@model GraciaDivina.Models.ViewModels.CartVM
@{
    ViewData["Title"] = "Tu carrito";
}
<h1 class="h4 mb-3">Carrito</h1>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Tu carrito está vacío.</div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th style="width:140px;">Cantidad</th>
                    <th class="text-end" style="width:120px;">Precio</th>
                    <th class="text-end" style="width:120px;">Subtotal</th>
                    <th style="width:90px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-3">
                                <img src="@(string.IsNullOrEmpty(it.ImagenUrl) ? Url.Content("~/img/placeholder.svg") : it.ImagenUrl)"
                                     alt="@it.Producto" style="width:64px;height:48px;object-fit:cover;border-radius:.25rem;" />
                                <div>
                                    <div class="fw-semibold">@it.Producto</div>
                                    <small class="text-muted">@it.SKU @(it.Talla != null ? "· " + it.Talla : "") @(it.Color != null ? "· " + it.Color : "")</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <form asp-action="Actualizar" method="post" class="d-flex gap-2">
                                <input type="hidden" name="itemId" value="@it.CarritoItemID" />
                                <input type="number" name="cantidad" value="@it.Cantidad" min="1" class="form-control form-control-sm" />
                                <button class="btn btn-sm btn-outline-primary">OK</button>
                            </form>
                        </td>
                        <td class="text-end">@it.Precio.ToString("C")</td>
                        <td class="text-end">@it.Subtotal.ToString("C")</td>
                        <td>
                            <form asp-action="Quitar" method="post">
                                <input type="hidden" name="itemId" value="@it.CarritoItemID" />
                                <button class="btn btn-sm btn-outline-danger">Quitar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end align-items-center gap-3">
        <div class="fs-5">Total: <strong>@Model.Total.ToString("C")</strong></div>
        <a class="btn btn-primary" asp-action="Confirmar">Continuar</a>
    </div>
}
