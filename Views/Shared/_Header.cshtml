@* Header de 2 niveles: topbar (logo + search + acciones) y catbar (categorías) *@
<header class="gd-header border-bottom mb-4">

    <!-- TOPBAR -->
    <nav class="gd-topbar navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand p-0 me-3" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo-gd.png" alt="Gracia Divina" class="brand-logo" />
            </a>

            <!-- Toggler móvil -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Menú">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <!-- Buscador centrado -->
                <div class="gd-search flex-grow-1 mx-lg-3 my-2 my-lg-0">
                    <form asp-controller="Catalogo" asp-action="Index" method="get">
                        <div class="input-group input-group-lg">
                            <input name="q" class="form-control" placeholder="Buscar por artículo" />
                            <button class="btn btn-primary" type="submit">🔍</button>
                        </div>
                    </form>
                </div>

                <!-- Acciones derecha -->
                <div class="d-flex align-items-center gap-2 flex-wrap justify-content-end action-bar">
                    <a class="btn btn-outline-light btn-sm" asp-controller="Carrito" asp-action="Index">
                        <span class="me-1">🛒</span><span id="miniCartCount">0</span>
                    </a>
                    <a class="btn btn-success btn-sm" href="https://wa.me/###########" target="_blank" rel="noopener">WhatsApp</a>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-light btn-sm" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm" asp-area="Admin" asp-controller="Auth" asp-action="Login">Iniciar sesión</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- CATBAR (pestañas) -->
    <div class="gd-catbar bg-dark">
        <div class="container">
            @* nav horizontal con scroll en móvil *@
            @await Component.InvokeAsync("CategoriasBar")
        </div>
    </div>

</header>
