<header class="border-bottom mb-4">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- LOGO -->
            <a class="navbar-brand p-0 me-2" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo-gd.png" alt="Gracia Divina" class="brand-logo" />
            </a>

            <!-- TOGGLER (móvil) -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Menú">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- CONTENIDO COLAPSABLE -->
            <div class="collapse navbar-collapse" id="mainNav">
                <!-- links izquierda -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    <!-- Categorías -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="catDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Categorías
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="catDrop">
                            <li><a class="dropdown-item" asp-controller="Catalogo" asp-action="Index">Ver todo</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            @await Component.InvokeAsync("CategoriasMenu") @* solo <li> *@
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalogo" asp-action="Index">Ver todo</a>
                    </li>
                </ul>

                <!-- acciones derecha -->
                <div class="d-flex align-items-center gap-2 flex-wrap justify-content-end action-bar">
                    <a class="btn btn-outline-light btn-sm" asp-controller="Carrito" asp-action="Index">
                        <span class="me-1">🛒</span><span id="miniCartCount">0</span>
                    </a>
                    <a class="btn btn-success btn-sm" href="https://wa.me/###########" target="_blank" rel="noopener">WhatsApp</a>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-light btn-sm" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm" asp-area="Admin" asp-controller="Auth" asp-action="Login">Admin</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>
