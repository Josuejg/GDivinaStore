@model GraciaDivina.Models.ViewModels.BuscarProductVM

@{
    ViewData["Title"] = "Resultados de búsqueda";
    var productos = Model?.Resultados ?? Enumerable.Empty<GraciaDivina.Models.ViewModels.ProductCardVM>();
}

<div class="container py-4">
    <h4 class="mb-3">
        Resultados para: <strong>@(Model?.Q ?? "")</strong>
        <span class="text-muted">(@Model?.Total encontrados)</span>
    </h4>

    <div class="row g-3">
        @if (productos.Any())
        {
            foreach (var p in productos)
            {
                <div class="col-6 col-md-3">
                    <div class="card h-100 shadow-sm">
                        <a href="@Url.Action("Details", "Producto", new { id = p.ProductoID })">
                            <img src="@(string.IsNullOrEmpty(p.ImagenUrl) ? Url.Content("~/img/placeholder.svg") : p.ImagenUrl)"
                                 class="card-img-top" alt="@p.Nombre" style="object-fit: cover; height: 200px;" />
                        </a>
                        <div class="card-body text-center">
                            <h6 class="card-title">@p.Nombre</h6>
                            <p class="text-muted mb-2">@p.Precio.ToString("C")</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning">
                No se encontraron productos para <strong>@(Model?.Q ?? "")</strong>.
            </div>
        }
    </div>

    @* Paginación simple *@
    @{
        var page = Model?.Page ?? 1;
        var pageSize = Model?.PageSize ?? 24;
        var total = Model?.Total ?? 0;
        var totalPages = (int)Math.Ceiling(total / (double)pageSize);
    }
    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Buscar", "Producto", new { q = Model?.Q, page = page - 1, pageSize })">Anterior</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Buscar", "Producto", new { q = Model?.Q, page = i, pageSize })">@i</a>
                    </li>
                }

                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Buscar", "Producto", new { q = Model?.Q, page = page + 1, pageSize })">Siguiente</a>
                </li>
            </ul>
        </nav>
    }
</div>
