@model IEnumerable<GraciaDivina.Models.ViewModels.ProductCardVM>
@{
    ViewData["Title"] = "Inicio";
}

<section class="mb-4">
    <div class="p-4 rounded-3 bg-light text-center">
        <h1 class="h3 mb-1">Bienvenida a Gracia Divina</h1>
        <p class="text-muted mb-0">Catálogo listo · Pedido por WhatsApp</p>
    </div>
</section>

<section>
    <h2 class="h5 mb-3">Novedades</h2>
    <div class="row g-3">
        @foreach (var p in Model)
        {
            <div class="col-6 col-md-4 col-lg-3">
                @await Html.PartialAsync("_ProductCard", p)
            </div>
        }
    </div>
</section>
